@using MasterISS_Partner_WebSite.Localization
@model MasterISS_Partner_WebSite.ViewModels.Setup.AddTaskStatusUpdateViewModel

@using (Ajax.BeginForm("UpdateTaskStatusNotRendezvous", "Setup", new AjaxOptions { HttpMethod = "POST", OnComplete = "UpdateTaskStatusNotRendezvousResult" }, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <div class="py-2">
            <span class="text-dark-75 font-weight-bolder d-block font-size-h5">Görev Durumunu Değiştir</span>
            <span class="text-muted font-size-lg">@Html.DisplayFor(m => m.ContactName)</span>
        </div>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <i aria-hidden="true" class="ki font-size-h5 ki-close"></i>
        </button>
    </div>
    <div class="modal-body">
        <!--begin::Info-->
        @Html.DropDownListFor(m => m.FaultCodes, (SelectList)ViewBag.FaultTypes, View.SelectFaultType, new { @class = "form-control", id = "FaultCodesDrowndown" })

        <span class="text-danger error-codes-updateStatusNotRendezvous"></span>

        @Html.HiddenFor(m => m.TaskNo)
        <div class="form-group my-8 mb-1">

            @Html.LabelFor(m => m.Description, new { @class = "text-muted font-size-lg" })
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @rows = "3" })
        </div>

        <div class="form-group my-8 mb-1">
            <div class="col-lg-12 col-md-9 col-sm-12">
                <div class="dropzone dropzone-default dropzone-primary dz-clickable" id="kt_dropzone_1">
                    <div class="dropzone-msg dz-message needsclick">
                        <span class="dropzone-msg-desc">Yüklenebilecek maksimum dosya boyutu 10 MB geçmemelidir.</span>
                        <h3 class="dropzone-msg-title">Dosyaları buraya bırakın veya yüklemek için tıklayın.</h3>
                        <br />
                        <input type="file" class="btn btn-light-warning font-weight-bold" name="file" id="file-button" />
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-light-primary font-weight-bold" data-dismiss="modal">Kapat</button>
        <button type="submit" class="btn btn-info font-weight-bold">Değiştir ve Kaydet</button>
    </div> <!--end::Info-->
}