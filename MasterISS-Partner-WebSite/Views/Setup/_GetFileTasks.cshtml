@using MasterISS_Partner_WebSite.Localization
@model MasterISS_Partner_WebSite.ViewModels.GetTasksFileViewModel
<div class="modal-header">
    <div class="py-2">
        <span class="text-dark-75 font-weight-bolder d-block font-size-h5">@View.UploadedPhotosOfTheTask</span>
    </div>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <i aria-hidden="true" class="ki font-size-h5 ki-close"></i>
    </button>
</div>
<div class="modal-body">
    <div class="d-flex mb-3">
        <div class="row" align="center">
            @foreach (var item in Model.GenericFileList)
            {
                <div class="col-lg-6 col-md-6 col-sm-12">
                    <a href="@item.ImgLink" target="_blank">
                        <img src="@item.ImgSrc" alt="Red dot" height="225" width="225" />
                    </a>
                </div>
            }
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-light-primary font-weight-bold" data-dismiss="modal">@View.Close</button>
</div>
