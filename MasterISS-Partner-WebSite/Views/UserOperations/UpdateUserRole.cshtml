@model MasterISS_Partner_WebSite.ViewModels.UpdateUserRoleViewModel
@{
    ViewBag.Title = "UpdateUserRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-group">
    @Html.DisplayNameFor(m => m.UserNameSurname)
    @Html.DisplayFor(m => m.UserNameSurname)
</div>

<div class="form-group">
    @Html.DisplayNameFor(m => m.UserEmail)
    @Html.DisplayFor(m => m.UserEmail)
</div>

@using (Html.BeginForm("UpdateUserRole", "UserOperations", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.UserId)
    @Html.HiddenFor(m=>m.UserEmail)
    @Html.HiddenFor(m=>m.UserNameSurname)
    <div class="form-group">
        @Html.LabelFor(m => m.RoleId)
        @Html.DropDownListFor(m => m.RoleId, (SelectList)ViewBag.RoleList)
        @Html.ValidationMessageFor(m => m.RoleId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.PhoneNumber)
        @Html.EditorFor(m => m.PhoneNumber)
        @Html.ValidationMessageFor(m => m.PhoneNumber)
    </div>

    <input type="submit" value="@MasterISS_Partner_WebSite.Localization.View.Submit" />
}