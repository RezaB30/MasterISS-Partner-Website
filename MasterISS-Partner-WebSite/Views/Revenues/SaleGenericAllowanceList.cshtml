@using MasterISS_Partner_WebSite.ViewModels.Revenues
@model  IEnumerable<SaleGenericAllowancesViewModel>
@{
    ViewBag.Title = MasterISS_Partner_WebSite.Localization.View.SaleGenericAllowanceList;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table>
    <thead>
        <tr>
            <td>@Html.DisplayNameFor(m => m.Allowance)</td>
            <td>@Html.DisplayNameFor(m => m.AllowanceState.Name)</td>
            <td>@Html.DisplayNameFor(m => m.MembershipDate)</td>
            <td>@Html.DisplayNameFor(m => m.SubscriptionNo)</td>
            <td>@Html.DisplayNameFor(m => m.SaleState.Name)</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Allowance)</td>
                <td>@Html.DisplayFor(modelItem => item.AllowanceState.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.MembershipDate)</td>
                <td>@Html.DisplayFor(modelItem => item.SubscriptionNo)</td>
                <td>@Html.DisplayFor(modelItem => item.SaleState.Name)</td>
            </tr>
        }
    </tbody>
</table>
<div>
    <ol>
        @for (int i = 0; i < (int)ViewBag.TotalCount; i++)
        {
            <li>
                @Html.ActionLink((i + 1).ToString(), "SaleGenericAllowanceList", new { page = i })
            </li>
        }
    </ol>
</div>

