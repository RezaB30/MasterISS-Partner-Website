@using MasterISS_Partner_WebSite.ViewModels.Revenues
@model  IEnumerable<SetupGenericAllowancesViewModel>
@{
    ViewBag.Title = MasterISS_Partner_WebSite.Localization.View.SetupGenericAllowanceList;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-striped">
    <thead>
        <tr>
            <td>@Html.DisplayNameFor(m => m.Allowance)</td>
            <td>@Html.DisplayNameFor(m => m.AllowanceState.Name)</td>
            <td>@Html.DisplayNameFor(m => m.CompletionDate)</td>
            <td>@Html.DisplayNameFor(m => m.IssueDate)</td>
            <td>@Html.DisplayNameFor(m => m.SubscriptionNo)</td>
            <td>@Html.DisplayNameFor(m => m.SetupState.Name)</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Allowance)</td>
                <td>@Html.DisplayFor(modelItem => item.AllowanceState.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.CompletionDate)</td>
                <td>@Html.DisplayFor(modelItem => item.IssueDate)</td>
                <td>@Html.DisplayFor(modelItem => item.SubscriptionNo)</td>
                <td>@Html.DisplayFor(modelItem => item.SetupState.Name)</td>
            </tr>
        }
    </tbody>
</table>
<div>
    <ol>
        @for (int i = 0; i < (int)ViewBag.TotalCount; i++)
        {
            <li>
                @Html.ActionLink((i + 1).ToString() + ".sayfa", "SetupGenericAllowanceList", new { page = i })
            </li>
        }
    </ol>
</div>