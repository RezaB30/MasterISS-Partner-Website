@using MasterISS_Partner_WebSite.ViewModels.Revenues
@model IEnumerable<SetupGenericAllowancesViewModel>

<h3 class="my-6 text-info font-size-h4">@MasterISS_Partner_WebSite.Localization.View.SetupAllowenceDetails</h3>
<table class="table table-head-custom table-vertical-center table-hover mb-2">
    <thead>
        <tr class="bg-info text-left">
            <th style="min-width: 130px">@Html.DisplayNameFor(m => m.FirstOrDefault().Allowance)</th>
            <th style="min-width: 130px">@Html.DisplayNameFor(m => m.FirstOrDefault().AllowanceState.Name)</th>
            <th style="min-width: 130px">@Html.DisplayNameFor(m => m.FirstOrDefault().CompletionDate)</th>
            <th style="min-width: 130px">@Html.DisplayNameFor(m => m.FirstOrDefault().IssueDate)</th>
            <th style="min-width: 130px">@Html.DisplayNameFor(m => m.FirstOrDefault().SetupState.Name)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><span class="text-dark-75  d-block font-size-lg " style="min-width: 130px">@Html.DisplayFor(motelItem => item.Allowance)</span></td>
                <td><span class="text-dark-75  d-block font-size-lg " style="min-width: 130px">@Html.DisplayFor(motelItem => item.AllowanceState.Name)</span></td>
                <td><span class="text-dark-75  d-block font-size-lg " style="min-width: 130px">@Html.DisplayFor(motelItem => item.CompletionDate)</span></td>
                <td><span class="text-dark-75  d-block font-size-lg " style="min-width: 130px">@Html.DisplayFor(motelItem => item.IssueDate)</span></td>
                <td><span class="text-dark-75  d-block font-size-lg " style="min-width: 130px">@Html.DisplayFor(motelItem => item.SubscriptionNo)</span></td>
                <td><span class="text-dark-75  d-block font-size-lg " style="min-width: 130px">@Html.DisplayFor(motelItem => item.SetupState.Name)</span></td>
            </tr>
        }
    </tbody>
</table>
<div>
    <ul>
        @for (int i = 0; i < (int)ViewBag.TotalCount; i++)
        {
            <li>
                @Html.ActionLink((i + 1).ToString(), "SetupAllowenceDetails", new { page = i, Id = ViewBag.Id })
            </li>
        }
    </ul>
</div>
