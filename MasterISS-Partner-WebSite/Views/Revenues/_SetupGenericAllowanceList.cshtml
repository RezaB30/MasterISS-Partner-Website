@using MasterISS_Partner_WebSite.ViewModels.Revenues
@model  IEnumerable<SetupGenericAllowancesViewModel>

<h3 class="my-6 text-info font-size-h4">@MasterISS_Partner_WebSite.Localization.View.SetupGenericAllowanceList</h3>
<table class="table table-head-custom table-vertical-center table-hover mb-2">
    <thead>
        <tr class="bg-info text-left">
            <th style="min-width: 130px">@Html.DisplayNameFor(m => m.Allowance)</th>
            <th style="min-width: 130px">@Html.DisplayNameFor(m => m.AllowanceState.Name)</th>
            <th style="min-width: 130px">@Html.DisplayNameFor(m => m.CompletionDate)</th>
            <th style="min-width: 130px">@Html.DisplayNameFor(m => m.SubscriptionNo)</th>
            <th style="min-width: 130px">@Html.DisplayNameFor(m => m.SetupState.Name)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><span class="text-dark-75  d-block font-size-lg "> @Html.DisplayFor(modelItem => item.Allowance)</span></td>
                <td><span class="text-dark-75  d-block font-size-lg ">@Html.DisplayFor(modelItem => item.AllowanceState.Name)</span></td>
                <td><span class="text-dark-75  d-block font-size-lg ">@Html.DisplayFor(modelItem => item.CompletionDate)</span></td>
                <td><span class="text-dark-75  d-block font-size-lg ">@Html.DisplayFor(modelItem => item.SubscriptionNo)</span></td>
                <td><span class="text-dark-75  d-block font-size-lg ">@Html.DisplayFor(modelItem => item.SetupState.Name)</span></td>
            </tr>
        }
    </tbody>
</table>
<div>
    <ul>
        @for (int i = 0; i < (int)ViewBag.TotalCount; i++)
        {
            @Html.ActionLink((i + 1).ToString(), "SetupGenericAllowanceList", new { page = i }, new { @class = "btn btn-lg btn-info mr-2" })
        }
    </ul>
</div>