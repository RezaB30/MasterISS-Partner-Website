@using MasterISS_Partner_WebSite.Localization
@model MasterISS_Partner_WebSite.ViewModels.GetPartnerClientFormsViewModel

<span class="text-danger">@ViewBag.UploadDocumentError</span>

<div class="modal-header">
    <div class="py-2">
        <span class="text-dark-75 font-weight-bolder d-block font-size-h5">@View.CustomerForms</span>
    </div>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <i aria-hidden="true" class="ki font-size-h5 ki-close"></i>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        @foreach (var item in Model.FormTypes)
        {
        <div class="col-12 mb-4">
            @Html.ActionLink(item.Value, "GetSelectedPartnerClientForms", "Customer", new { SubscriptionId = Model.SubscriptionId, FormTypeId = item.Key }, new { @class = "btn btn-block btn-outline-info" })
        </div>
        }
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-light-primary font-weight-bold" data-dismiss="modal">@View.Close</button>
    <input type="submit" id="Submit" name="Submit" class="btn btn-success m-t-5 getFormsCustomers" value="@View.Submit" />
</div>

