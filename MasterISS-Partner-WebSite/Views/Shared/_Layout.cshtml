@using MasterISS_Partner_WebSite.Helpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/bundles/css")
    @Styles.Render("~/Content/custom-css")
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink(MasterISS_Partner_WebSite.Localization.View.CheckInfrastructure, "Index", "Home")</li>
                    }

                    @if (User.IsInRole("Payment") && (User.IsInRole("PaymentManager") || User.IsInRole("Admin")))
                    {
                        <li>@Html.ActionLink(MasterISS_Partner_WebSite.Localization.View.BillSettings, "Index", "Bill")</li>
                    }

                    @if (User.IsInRole("Sale") && (User.IsInRole("SaleManager") || User.IsInRole("Admin")))
                    {
                        <li>@Html.ActionLink(MasterISS_Partner_WebSite.Localization.View.AddCustomer, "NewCustomer", "Customer")</li>
                    }

                    @if (User.IsInRole("Setup") && (User.IsInRole("SetupManager") || User.IsInRole("Admin")))
                    {
                        <li>@Html.ActionLink(MasterISS_Partner_WebSite.Localization.View.SetupPanel, "Index", "Setup")</li>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink(MasterISS_Partner_WebSite.Localization.View.UserOperations, "Index", "UserOperations")</li>
                    }

                    @if ((User.IsInRole("Setup") && (User.IsInRole("SetupManager") || User.IsInRole("Admin"))) || (User.IsInRole("Sale") && (User.IsInRole("SaleManager") || User.IsInRole("Admin"))))
                    {
                        <li>@Html.ActionLink(MasterISS_Partner_WebSite.Localization.View.Revenues, "Index", "Revenues")</li>
                    }


                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Çıkış", "SignOut", "Account")</li>
                    }

                    <li>@Html.LanguageLink("Türkçe", "tr-tr")</li>
                    <li>@Html.LanguageLink("English", "en-us")</li>
                </ul>

            </div>
        </div>
    </div>




    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/QueryAdress")
    @Scripts.Render("~/CustomMap")
    @Scripts.Render("~/bundleMask/jquery")
    @RenderSection("Javascript", required: false)
</body>
</html>
